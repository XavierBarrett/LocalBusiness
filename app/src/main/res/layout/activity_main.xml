<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.localbusiness.MainActivity">

    <ImageView
        android:id="@+id/accentPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/accent" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Come visit your local Business Supply Store! Open Monday-Friday 7:30AM-5:00PM"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:fontFamily="serif-monospace"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="6411 Arc Way Fort Myers FL 33966"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:fontFamily="serif-monospace"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accentPhoto"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Serving Southwest Florida since 1977. Office copiers and printers. From simple office copiers to fully loaded units, We can meet your needs!"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" />



</RelativeLayout>
